extends layout

block content
  .registration
    form.form-horizontal#form(role='form',method='post')
      .form-group
        label.col-sm-3.control-label(for='inputEmail3') Email/username
        .col-sm-8
          input#inputEmail.form-control(type='email', placeholder='Email')
      .form-group
        label.col-sm-3.control-label(for='inputPassword3') Password
        .col-sm-6
          input#inputPassword1.form-control(type='password', placeholder='Password')
      .form-group
        label.col-sm-3.control-label(for='inputPassword3') Password
        .col-sm-6
          input#inputPassword2.form-control(type='password', placeholder='Password')
      .form-group
        label.col-sm-3.control-label(for='inputPassword4') 昵称:
        .col-sm-6
          input#inputName.form-control(type='text',placeholder='name')
      .form-group
        .col-sm-offset-3.col-sm-10
          .checkbox
            label
              input(type='checkbox')
              | Remember me
      .form-group
        .col-sm-offset-3.col-sm-10
          button#btn.btn.btn-default(type='button',data-loading-text="正在注册请稍候...",data-toggle="button") 注册

    script(type="text/javascript",src="script/userjs/reg.js")










